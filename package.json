{
  "name": "ui-autotools",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist ./scripts/dist",
    "build": "yarn build:ts && yarn build:stylable",
    "build:ts": "tsc --build",
    "build:stylable": "lerna run --parallel build:stylable",
    "pretest": "yarn build && yarn lint",
    "test": "lerna run test --stream",
    "lint": "eslint . -f codeframe",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^3.12.4",
    "@stylable/core": "^4.2.1",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.17",
    "@types/chai-dom": "^0.0.10",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "10",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.5",
    "@types/webpack": "^4.41.26",
    "@types/webpack-dev-middleware": "^4.1.2",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "chai": "^4.3.4",
    "css-loader": "^5.2.4",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.5.2",
    "lerna": "^4.0.0",
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5",
    "playwright-chromium": "^1.10.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "typescript": "~4.2.4",
    "webpack": "^4.46.0"
  },
  "engines": {
    "node": ">=10"
  },
