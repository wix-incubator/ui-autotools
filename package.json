{
  "name": "ui-autotools",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist ./scripts/dist",
    "build": "yarn build:ts && yarn build:stylable",
    "build:ts": "tsc --build",
    "build:stylable": "lerna run --parallel build:stylable",
    "pretest": "yarn build && yarn lint",
    "lint": "node ./scripts/dist/json-linter",
    "test": "lerna run test --stream",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^3.11.9",
    "@stylable/core": "^3.11.9",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.14",
    "@types/chai-dom": "^0.0.10",
    "@types/glob": "^7.1.3",
    "@types/koa-webpack": "^6.0.0",
    "@types/mocha": "^8.0.4",
    "@types/node": "10",
    "@types/puppeteer": "^5.4.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.9",
    "@types/sinon-chai": "^3.2.5",
    "@types/webpack": "^4.41.25",
    "@types/webpack-env": "^1.16.0",
    "chai": "^4.2.0",
    "css-loader": "^5.0.1",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.5.0",
    "lerna": "^3.22.1",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "typescript": "~4.1.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": "git@github.com:wix-incubator/ui-autotools.git",
