  "license": "BSD-3-Clause",
  "dependencies": {
    "@ts-tools/node": "^0.6.8",
    "@ui-autotools/a11y": "^1.0.19",
    "@ui-autotools/sanity": "^1.0.15",
    "@ui-autotools/showcase": "^1.0.14",
    "@ui-autotools/snap": "^1.0.6",
    "@ui-autotools/utils": "^1.0.10",
    "commander": "^2.19.0",
    "glob": "^7.1.3"
  },
  "devDependencies": {
    "@ui-autotools/registry": "^2.0.3"
  },
  "peerDependencies": {
    "@ui-autotools/registry": "^2.0.0",
