  "dependencies": {
    "@ui-autotools/a11y": "^1.0.7",
    "@ui-autotools/eyes": "^1.0.7",
    "@ui-autotools/sanity": "^1.0.8",
    "@ui-autotools/utils": "^1.0.5",
    "@ui-autotools/website": "^1.0.4",
    "commander": "^2.15.1",
    "glob": "^7.1.2",
    "typescript-support": "^0.4.1"
  },
  "devDependencies": {
    "@ui-autotools/registry": "^1.0.6"
  },
