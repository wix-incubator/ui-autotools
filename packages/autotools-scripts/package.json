  "bin": {
    "autotools": "bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "build": "tsc --project src --outDir cjs --module commonjs",
    "build:watch": "tsc --watch --project src --outDir cjs --module commonjs",
    "lint": "run-p lint:src lint:test",
